@page "/customers"
@using System.Data


@inject HttpClient HttpClient


<div class="col-3">
	<h3>Get Customer By Email</h3>

	<EditForm Model="CurrentCustomer" OnSubmit="GetCustomerByEmail">
		<InputText class="form-control m-2" @bind-Value="CurrentCustomer.Email"></InputText>
		<button>Search</button>
	</EditForm>
	<button @onclick="ResetList">Reset</button>
</div>



<table class="table">
	<thead>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Address</th>
		<th>Phone Number</th>
		<th>Customer Number</th>
	</tr>
	</thead>

	<tbody>
	
	
	<Virtualize Items="CustomerList.OrderByDescending(c => c.FirstName).ToArray()" Context="customer">
		<tr>
			
			<td class="align-middle">
				@customer.FirstName
			</td>
			<td class="align-middle">
				@customer.LastName
			</td>
			<td class="align-middle">
				@customer.Email
			</td>
			<td class="align-middle">
				@customer.Address
			</td>
			<td class="align-middle">
				@customer.Phone
			</td>
				<td class="align-middle">
					@customer.Id
				</td>
		</tr>
	</Virtualize>
	</tbody>
</table>
